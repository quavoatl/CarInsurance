@model CarInsurance.DataAccess.AccountController.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<hr />

<div class="row">
    <div class="col-md-6 offset-3">
        <h1><i class="fas fa-users"></i>  User Registration</h1>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <i class="fas fa-envelope"></i>
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="IsBroker">
                        <input asp-for="IsBroker" />
                        @Html.DisplayNameFor(m => m.IsBroker).Replace(";", "");
                    </label>
                </div>
            </div>

            <div class="form-group">
                <i class="fas fa-phone-square-alt"></i>
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fas fa-unlock"></i>
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fas fa-unlock"></i>
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fas fa-unlock"></i>
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>
<hr />